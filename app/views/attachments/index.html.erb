<% title "Attachments" %>

<table>
  <tr>
    <th>Mime Type</th>
    <th>Name</th>
    <th>Owner Type</th>
    <th>Owner</th>
  </tr>
  <% for attachment in @attachments %>
    <tr>
      <td><%= attachment.mime_type %></td>
      <td><%= attachment.name %></td>
      <td><%= attachment.owner_type %></td>
      <td><%= attachment.owner_id %></td>
      <td><%= link_to "Show", attachment %></td>
      <td><%= link_to "Edit", edit_attachment_path(attachment) %></td>
      <td><%= link_to "Destroy", attachment, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Attachment", new_attachment_path %></p>
