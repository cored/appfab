- title "Votes"

%table
  %tr
    %th Idea
    %th User
  - for vote in @votes
    %tr
      %td= vote.idea_id
      %td= vote.user_id
      %td= link_to 'Show', vote
      %td= link_to 'Edit', edit_vote_path(vote)
      %td= link_to 'Destroy', vote, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Vote", new_vote_path
