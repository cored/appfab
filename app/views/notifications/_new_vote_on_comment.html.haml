:ruby
  idea = notification.subject.subject.idea
  data = {
    user:       user_name(notification.subject.user),
    idea_title: idea.title,
    idea_link:  link_to("##{idea.id}", idea),
    upvoted_or_downvoted: notification.subject.up ? _('upvoted') : _('downvoted')
  }

= _('Your comment on "%{idea_title}" (%{idea_link}) was %{upvoted_or_downvoted}').html_safe % data
